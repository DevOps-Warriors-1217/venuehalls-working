apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: mongo
  namespace: vedika
spec:
  serviceName: mongo-service
  replicas: 5
  selector:
    matchLabels:
      role: mongo
  template:
    metadata:
      labels:
        role: mongo
        replicaset: rs0
    spec:
      #terminationGracePeriodSeconds: 10
      containers:
        - name: mongo-container
          image: mongo
          command:
            - "mongod"
            - "--bind_ip"
            - "0.0.0.0"
            - "--replSet"
            - "rs0"
          ports:
            - containerPort: 27017
          
