apiVersion: apps/v1
kind: Deployment
metadata:
  name: ubuntu-deployment
  namespace: vedika
spec:
  selector:
    matchLabels:
      app: ubuntu
  replicas: 4 # tells deployment to run 2 pods matching the template
  template:
    metadata:
      labels:
        app: ubuntu
    spec:
      containers:
      - name: ubuntu
        image: nginx:1.14.2
        ports:
        - containerPort: 80

